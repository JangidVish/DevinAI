@import "tailwindcss";

:root {
  font-family: system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: light dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #242424;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a {
  font-weight: 500;
  color: #646cff;
  text-decoration: inherit;
}

a:hover {
  color: #535bf2;
}

body {
  margin: 0;
  display: flex;
  place-items: center;
  min-width: 320px;
  min-height: 100vh;
}

.homeBg {
  background-color: #000000;
}

/* Enhanced Dark Theme Animations */
@keyframes fadeIn {
  from { 
    opacity: 0;
  }
  to { 
    opacity: 1;
  }
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(30px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from { 
    opacity: 0;
    transform: translateY(20px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scaleIn {
  from { 
    opacity: 0;
    transform: scale(0.9);
  }
  to { 
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-15px); }
}

@keyframes floatDelayed {
  0%, 100% { transform: translateY(0px) translateX(0px); }
  25% { transform: translateY(-10px) translateX(5px); }
  50% { transform: translateY(-20px) translateX(0px); }
  75% { transform: translateY(-10px) translateX(-5px); }
}

@keyframes floatSlow {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-25px) rotate(2deg); }
}

@keyframes floatCode {
  0%, 100% { 
    transform: translateY(0px);
    opacity: 0.3;
  }
  50% { 
    transform: translateY(-20px);
    opacity: 0.6;
  }
}

@keyframes floatCodeDelayed {
  0%, 100% { 
    transform: translateY(0px) translateX(0px);
    opacity: 0.2;
  }
  33% { 
    transform: translateY(-15px) translateX(10px);
    opacity: 0.5;
  }
  66% { 
    transform: translateY(-25px) translateX(-5px);
    opacity: 0.4;
  }
}

@keyframes floatCodeSlow {
  0%, 100% { 
    transform: translateY(0px);
    opacity: 0.4;
  }
  50% { 
    transform: translateY(-30px);
    opacity: 0.7;
  }
}

@keyframes lineMove {
  0% { 
    transform: translateY(-100vh);
    opacity: 0;
  }
  50% {
    opacity: 0.5;
  }
  100% { 
    transform: translateY(100vh);
    opacity: 0;
  }
}

@keyframes lineMoveDelayed {
  0% { 
    transform: translateY(-100vh) translateX(0px);
    opacity: 0;
  }
  25% {
    opacity: 0.3;
    transform: translateY(-50vh) translateX(10px);
  }
  75% {
    opacity: 0.3;
    transform: translateY(50vh) translateX(-10px);
  }
  100% { 
    transform: translateY(100vh) translateX(0px);
    opacity: 0;
  }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
  opacity: 0;
}

.animate-slide-up {
  animation: slideUp 0.8s ease-out forwards;
  opacity: 0;
}

.animate-fade-in-up {
  animation: fadeInUp 0.6s ease-out forwards;
  opacity: 0;
}

.animate-scale-in {
  animation: scaleIn 0.3s ease-out forwards;
  opacity: 0;
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-float-delayed {
  animation: floatDelayed 8s ease-in-out infinite;
  animation-delay: 1s;
}

.animate-float-slow {
  animation: floatSlow 10s ease-in-out infinite;
  animation-delay: 2s;
}

.animate-float-code {
  animation: floatCode 12s ease-in-out infinite;
}

.animate-float-code-delayed {
  animation: floatCodeDelayed 15s ease-in-out infinite;
  animation-delay: 3s;
}

.animate-float-code-slow {
  animation: floatCodeSlow 18s ease-in-out infinite;
  animation-delay: 6s;
}

.animate-line-move {
  animation: lineMove 20s linear infinite;
}

.animate-line-move-delayed {
  animation: lineMoveDelayed 25s linear infinite;
  animation-delay: 5s;
}

/* Code Reveal Effects */
:root {
  --mouse-x: 50%;
  --mouse-y: 50%;
  --hero-mask-x: 50%;
  --hero-mask-y: 50%;
  --hero-mask-size: 200px;
  --font-inter: ui-sans-serif, system-ui, sans-serif;
}

/* Hover areas for code reveals */
.hover-area {
  pointer-events: auto;
  z-index: 5;
}

/* Hidden code elements that reveal on group hover */
.code-reveal {
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
  position: relative;
}

/* Reveal on group hover */
.group:hover .code-reveal {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transform: translateY(0);
  backdrop-filter: blur(10px);
  background: rgba(17, 24, 39, 0.9) !important;
  border-color: rgba(75, 85, 99, 0.8) !important;
  box-shadow: 
    0 10px 25px -3px rgba(0, 0, 0, 0.6),
    0 4px 6px -2px rgba(0, 0, 0, 0.4);
  z-index: 10;
}

/* Huly.io Style Glowing Button */
.huly-glow-button {
  position: relative;
  z-index: 10;
  display: flex;
  height: 2.5rem;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 9999px;
  isolation: isolate;
  border-width: 1px;
  border-color: rgba(99, 102, 241, 0.8);
  background-color: rgba(30, 41, 59, 0.8);
  padding-left: 4rem;
  padding-right: 4rem;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: -0.015em;
  color: rgb(226, 232, 240);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-family: var(--font-inter);
  -webkit-font-smoothing: antialiased;
  box-shadow: 
    0 0 20px rgba(99, 102, 241, 0.3),
    0 0 40px rgba(139, 92, 246, 0.2);
}

.huly-glow-button::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  padding: 1px;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.8), rgba(139, 92, 246, 0.6));
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
  -webkit-mask-composite: xor;
}

.huly-glow-button::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  background: radial-gradient(
    ellipse 200px 80px at var(--hero-mask-x) var(--hero-mask-y),
    rgba(99, 102, 241, 0.8) 0%,
    rgba(99, 102, 241, 0.6) 30%,
    rgba(99, 102, 241, 0.3) 50%,
    transparent 70%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
  pointer-events: none;
}

.huly-glow-button:hover::after {
  opacity: 1;
}

.huly-glow-button > * {
  position: relative;
  z-index: 1;
}

.huly-glow-button:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 0 60px rgba(99, 102, 241, 0.6),
    0 0 100px rgba(139, 92, 246, 0.4),
    0 20px 40px -12px rgba(99, 102, 241, 0.3),
    0 8px 16px -4px rgba(139, 92, 246, 0.2),
    0 0 0 1px rgba(99, 102, 241, 0.8);
}

/* Cloud Effect Background */
.cloud-effect {
  position: absolute;
  inset: 0;
  background: 
    radial-gradient(ellipse 800px 600px at 50% 0%, rgba(120, 119, 198, 0.3), transparent 50%),
    radial-gradient(ellipse 1200px 800px at 100% 50%, rgba(120, 119, 198, 0.15), transparent 50%),
    radial-gradient(ellipse 1000px 600px at 0% 50%, rgba(120, 119, 198, 0.15), transparent 50%),
    radial-gradient(ellipse 600px 400px at 50% 100%, rgba(120, 119, 198, 0.2), transparent 50%);
  filter: blur(1px);
  opacity: 0.8;
}

/* Enhanced radial mask effect */
.radial-mask {
  position: absolute;
  inset: 0;
  background: radial-gradient(
    circle at var(--hero-mask-x) var(--hero-mask-y),
    transparent 0%,
    transparent calc(var(--hero-mask-size) * 0.5),
    rgba(0, 0, 0, 0.1) calc(var(--hero-mask-size) * 0.8),
    rgba(0, 0, 0, 0.3) 100%
  );
  pointer-events: none;
}

/* Ethereal glow particles */
@keyframes ethereal-float {
  0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.3; }
  25% { transform: translateY(-20px) rotate(90deg); opacity: 0.6; }
  50% { transform: translateY(-10px) rotate(180deg); opacity: 0.4; }
  75% { transform: translateY(-30px) rotate(270deg); opacity: 0.7; }
}

.ethereal-particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8), transparent);
  border-radius: 50%;
  animation: ethereal-float 8s ease-in-out infinite;
}

.ethereal-particle:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
.ethereal-particle:nth-child(2) { top: 60%; left: 20%; animation-delay: 2s; }
.ethereal-particle:nth-child(3) { top: 30%; right: 15%; animation-delay: 4s; }
.ethereal-particle:nth-child(4) { bottom: 40%; left: 30%; animation-delay: 6s; }
.ethereal-particle:nth-child(5) { bottom: 20%; right: 25%; animation-delay: 1s; }
.ethereal-particle:nth-child(6) { top: 80%; right: 40%; animation-delay: 3s; }
.ethereal-particle:nth-child(7) { top: 15%; left: 60%; animation-delay: 5s; }
.ethereal-particle:nth-child(8) { bottom: 70%; right: 10%; animation-delay: 7s; }

/* Enhanced project cards with subtle reveal */
.spotlight-card {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.spotlight-card:hover {
  background: rgba(31, 41, 55, 0.8);
  border-color: rgba(75, 85, 99, 0.7);
  box-shadow: 
    0 10px 25px -3px rgba(0, 0, 0, 0.3),
    0 4px 6px -2px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

/* Proximity-based reveal effect */
@keyframes codeAppear {
  from {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.code-reveal:hover {
  animation: codeAppear 0.5s ease-out;
}

/* Syntax highlighting improvements */
.code-reveal .text-purple-400 {
  color: #c084fc;
}

.code-reveal .text-blue-400 {
  color: #60a5fa;
}

.code-reveal .text-green-400 {
  color: #4ade80;
}

.code-reveal .text-yellow-400 {
  color: #facc15;
}

.code-reveal .text-red-400 {
  color: #f87171;
}

.code-reveal .text-orange-400 {
  color: #fb923c;
}

/* Terminal-style blinking cursor */
@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.animate-pulse {
  animation: blink 1s infinite;
}

/* Subtle reveal area indicator */
.code-reveal {
  position: relative;
}

.code-reveal::before {
  content: '';
  position: absolute;
  inset: -10px;
  border-radius: 8px;
  background: transparent;
  border: 1px solid transparent;
  transition: all 0.3s ease;
  pointer-events: none;
}

.code-reveal:hover::before {
  border-color: rgba(75, 85, 99, 0.3);
  background: rgba(17, 24, 39, 0.1);
}

/* File explorer hover effects */
.code-reveal:hover .text-gray-500 {
  color: #9ca3af;
}

.code-reveal:hover .text-blue-400 {
  color: #3b82f6;
}

.code-reveal:hover .text-green-400 {
  color: #10b981;
}

.code-reveal:hover .text-purple-400 {
  color: #8b5cf6;
}

.code-reveal:hover .text-yellow-400 {
  color: #f59e0b;
}

/* Glassmorphism effect */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Neon text effect */
.neon-text {
  text-shadow: 0 0 10px currentColor;
}

/* Hover glow effect */
.hover-glow:hover {
  box-shadow: 0 0 30px rgba(34, 211, 238, 0.3);
}

button {
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-weight: 500;
  font-family: inherit;
  cursor: pointer;
  transition: border-color 0.25s;
}

button:focus,
button:focus-visible {
  outline: 4px auto -webkit-focus-ring-color;
}

@media (prefers-color-scheme: light) {
  :root {
    color: #213547;
    background-color: #ffffff;
  }

  a:hover {
    color: #747bff;
  }

  button {
    background-color: #f9f9f9;
  }
}

/* File Explorer Enhancements */
.custom-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: rgba(99, 102, 241, 0.5) rgba(30, 41, 59, 0.3);
}

.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: rgba(30, 41, 59, 0.3);
  border-radius: 3px;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, rgba(99, 102, 241, 0.6), rgba(147, 51, 234, 0.6));
  border-radius: 3px;
  transition: background 0.2s ease;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, rgba(99, 102, 241, 0.8), rgba(147, 51, 234, 0.8));
}

/* File tree animations */
@keyframes file-item-enter {
  from {
    opacity: 0;
    transform: translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.tree-element {
  animation: file-item-enter 0.3s ease-out;
}

/* Enhanced dropdown animations */
@keyframes dropdown-slide {
  from {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.file-tree .absolute {
  animation: dropdown-slide 0.2s ease-out;
}

/* File status glow effects */
@keyframes status-pulse {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}

.tree-element .bg-gradient-to-r:not(:hover) {
  animation: status-pulse 3s ease-in-out infinite;
}

/* File Explorer Layout Fixes - Complete horizontal scroll prevention */
.explorer {
  max-width: 100%;
  width: 100%;
  overflow-x: hidden !important;
  word-wrap: break-word;
  overflow-wrap: break-word;
  box-sizing: border-box;
}

.explorer *,
.explorer *::before,
.explorer *::after {
  min-width: 0 !important;
  max-width: 100% !important;
  box-sizing: border-box;
}

.file-tree {
  overflow-x: hidden !important;
  overflow-y: auto;
  width: 100%;
  max-width: 100%;
}

.tree-element {
  word-break: break-all !important;
  overflow-wrap: break-word !important;
  overflow-x: hidden !important;
  width: 100% !important;
  max-width: 100% !important;
  box-sizing: border-box !important;
}

.tree-element * {
  word-break: break-all !important;
  overflow-wrap: break-word !important;
  hyphens: auto;
  overflow-x: hidden !important;
  max-width: 100% !important;
  min-width: 0 !important;
}

.tree-element p {
  word-break: break-all !important;
  overflow-wrap: break-word !important;
  hyphens: auto;
  white-space: normal !important;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tree-element .flex {
  min-width: 0 !important;
  max-width: 100% !important;
  overflow-x: hidden !important;
}

.tree-element .text-xs {
  word-break: break-all !important;
  overflow-wrap: break-word !important;
  white-space: normal !important;
  line-height: 1.2;
}

/* Force all text content to wrap */
.explorer .truncate {
  white-space: normal !important;
  word-break: break-all !important;
  overflow-wrap: break-word !important;
  text-overflow: clip;
  overflow: hidden;
}

/* Project header improvements */
.project-header h1 {
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Additional safety measures */
.file-tree .flex-1 {
  min-width: 0 !important;
  overflow: hidden !important;
}

.file-tree .gap-2,
.file-tree .gap-3 {
  gap: 0.25rem !important;
}

/* Status badges sizing */
.tree-element span[class*="bg-gradient"] {
  font-size: 0.625rem !important;
  padding: 0.125rem 0.375rem !important;
  flex-shrink: 0;
  max-width: 4rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Complete horizontal scroll elimination */
.explorer,
.file-tree,
.tree-element {
  scrollbar-width: none !important; /* Firefox */
  -ms-overflow-style: none !important; /* Internet Explorer 10+ */
}

.explorer::-webkit-scrollbar,
.file-tree::-webkit-scrollbar,
.tree-element::-webkit-scrollbar {
  display: none !important; /* Safari and Chrome */
  width: 0 !important;
  height: 0 !important;
}

/* Force container constraints */
.explorer {
  contain: layout style !important;
  isolation: isolate !important;
}

/* Ensure no child can exceed container width */
.explorer * {
  max-width: inherit !important;
}